@model Prosjekt1.Models.Order

@{
    ViewBag.Title = "Order Confirmation";
}

<h2>Order Confirmation:</h2>

<div>
    <hr />
    <h4>You have just ordered the following items:</h4>
    <br />
    <p>Order date: @Model.OrderDate</p>
    <table class="table">
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Price</td>
                <td>@item.ItemQuantity</td>
            </tr>
        }
        <tr>
            <td>Total</td>
            <td>@Model.OrderTotal</td>
            <td></td>
        </tr>
    </table>
</div>
<br />
<h5>If all items are in stock, your order will be posted on the next working day.</h5>
<br />
<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to main page</a>